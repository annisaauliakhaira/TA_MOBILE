<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#badbeb">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:backgroundTint="#fff"
        android:background="#fff"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/iv_kehadiran"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_check"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_courseHistory"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#171c50"
                    android:text="Pemograman Web"
                    android:paddingRight="5dp"/>
                <TextView
                    android:id="@+id/tv_classHistory"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Kuliah/KSI/01"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#171c50"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_dateHistory"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="2020-10-02"
                    android:paddingRight="5dp"/>
                <TextView
                    android:id="@+id/tv_timeHistory"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="09.00-10.30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_roomHistory"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:paddingRight="5dp"
                    android:text="E 1.1"/>

                <TextView
                    android:id="@+id/tv_presenceTimeStart"
                    android:layout_width="140dp"
                    android:textSize="12dp"
                    android:layout_height="wrap_content"
                    android:text="2020-01-02 18:43"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>