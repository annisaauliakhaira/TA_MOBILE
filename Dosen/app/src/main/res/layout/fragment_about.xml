<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="40dp"
    android:background="#467087">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:text="PROFILE"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat"
            android:paddingBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:layout_gravity="center"
            android:text="WELCOME LECTURER"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="28dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="309dp"
        android:layout_height="364dp"
        android:layout_gravity="center"
        android:background="#71ccf3"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="233dp"
        android:layout_height="438dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dosen"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text Husnil Kamil, M.T"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_nip1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="text NIP.198804232009022001"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#26627f"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingLeft="30dp">

            <Button
                android:id="@+id/bt_changePass"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:background="#2b8b28"
                android:drawableStart="@drawable/ic_change"
                android:text="  Change Password  "
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="12sp"></Button>
        </LinearLayout>



    </LinearLayout>

</FrameLayout>