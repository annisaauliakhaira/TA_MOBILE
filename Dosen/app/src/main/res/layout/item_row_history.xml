<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#badbeb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:backgroundTint="#fff"
        android:background="@drawable/border"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_classNameH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text Bahasa Pemograman Lanjut"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#171c50"
            android:paddingBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/tv_classCodeH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TSI-01"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/tv_dateH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2020-10-06"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/tv_totalStudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student : 10"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_presenceTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Presence : 12"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_absenceTotal"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:text="Absence : 0"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_permitTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Permit : 0"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>